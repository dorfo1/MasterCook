<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_promocional"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_promocional_nome"
                style="@style/primaryText"
                android:layout_margin="8dp"
                android:text="Teste"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_promocional" />

            <TextView
                android:id="@+id/tv_promocional_dificuldade"
                style="@style/secundaryText"
                android:drawableLeft="@drawable/ic_dificuldade"
                android:drawablePadding="4dp"
                android:text="FÃ¡cil"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/tv_promocional_nome"
                app:layout_constraintTop_toBottomOf="@id/tv_promocional_nome" />


            <TextView
                android:id="@+id/tv_promocional_rating"
                style="@style/secundaryText"
                android:drawableLeft="@drawable/ic_rating"
                android:drawablePadding="4dp"
                android:text="4.8"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@id/tv_promocional_dificuldade"
                app:layout_constraintBottom_toBottomOf="@id/tv_promocional_dificuldade"
                app:layout_constraintEnd_toEndOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>